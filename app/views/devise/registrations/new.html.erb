<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    Имя <br />
    <%= f.text_field :first_name, autocomplete: "given-name" %>
  </div>
  <div class="field">
    Фамилия <br />
    <%= f.text_field :last_name, autocomplete: "family-name" %>
  </div>
  <div class="field">
    Телефон<br />
    <%= f.text_field :phone, autocomplete: "phone" %>
  </div>
  <div class="field">
    Пол<br />
    <%= f.select :gender, User.genders.keys, {}%>
  </div>

  

  <div class="field">
    Пароль
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    Повтор пароля<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <br />
    <%= f.submit "Зарегистрироваться" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
