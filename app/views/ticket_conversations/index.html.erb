<div class="page-header">
  <%= link_to new_ticket_conversation_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Ticket conversation
  <% end %>
  <h1>Listing ticket_conversations</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Client</th>
            <th>Manager</th>
            <th>Status</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @ticket_conversations.each do |ticket_conversation| %>
        <%= content_tag :tr, id: dom_id(ticket_conversation), class: dom_class(ticket_conversation) do %>
                      <td><%= ticket_conversation.client %></td>
                      <td><%= ticket_conversation.manager %></td>
                      <td><%= ticket_conversation.status %></td>
                    <td><%= link_to 'Show', ticket_conversation %></td>
          <td><%= link_to 'Edit', edit_ticket_conversation_path(ticket_conversation) %></td>
          <td><%= link_to 'Destroy', ticket_conversation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
